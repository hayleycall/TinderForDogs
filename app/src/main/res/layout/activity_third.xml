<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hayleycall.boner.ThirdActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
    <TextView android:text="Puppy Preferences" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="15pt"/>
    <TextView
        android:text="\n\n\tOther Pets?"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/otherpet_spinner"
        android:layout_width="fill_parent"
        android:entries="@array/yesno"
        android:layout_height="wrap_content">
     </Spinner>
        <TextView
            android:text="\n\n\tBackyard?"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
     <Spinner
            android:id="@+id/backyard_spinner"
            android:layout_width="fill_parent"
            android:entries="@array/yesno"
            android:layout_height="wrap_content">
        </Spinner>
        <TextView
            android:text="\n\n\tKids?"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/kids_spinner"
            android:layout_width="fill_parent"
            android:entries="@array/yesno"
            android:layout_height="wrap_content">
        </Spinner>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:text="Submit"
            android:onClick="goToMain"/>
</LinearLayout>
    </RelativeLayout>